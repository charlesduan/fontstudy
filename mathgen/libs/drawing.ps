%!PS-Adobe-2.0

%
% drawing.ps
%
% Drawing stuff.
%

/DrawRefDict <<
    /DrawRefNo 1
>> def
/showpointref {
    gsave
        rmoveto
        /Helvetica findfont 20 scalefont setfont
        DrawRefDict /DrawRefNo get 4 string cvs show
        DrawRefDict /DrawRefNo 2 copy get 1 add put
    grestore
} bind def
/resetpointref {
    DrawRefDict /DrawRefNo 1 put
} bind def
/pointbox {
    gsave
	newpath moveto
        0 -32 showpointref
	-10 -10 rlineto
	20 0 rlineto
	closepath fill
    grestore
} bind def
/uppointbox {
    gsave
	newpath moveto
        0 15 showpointref
	-10 10 rlineto
	20 0 rlineto
	closepath fill
    grestore
} bind def
/rtpointbox {
    gsave
	newpath moveto
        15 -7 showpointref
	10 -10 rlineto
	0 20 rlineto
	closepath fill
    grestore
} bind def
/ltpointbox {
    gsave
	newpath moveto
        -30 -7 showpointref
	-10 10 rlineto
	0 -20 rlineto
	closepath fill
    grestore
} bind def

/drawHorizLine {
    gsave
	3 setlinewidth
	newpath dup 0 exch moveto
	700 exch lineto
	stroke
    grestore
} def

/drawLine {
    gsave 4 copy moveto lineto stroke grestore
} def


